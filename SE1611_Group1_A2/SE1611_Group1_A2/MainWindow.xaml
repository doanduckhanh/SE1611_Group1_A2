<Window x:Class="SE1611_Group1_A2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SE1611_Group1_A2"
        mc:Ignorable="d"
        Title="MainWindow" MaxHeight="500" MinHeight="500" MaxWidth="900" MinWidth="900"
         WindowStartupLocation="CenterScreen" ResizeMode="NoResize" >
    <Grid>
        <StackPanel>
            <Menu Name="Menu" Width="Auto" Height="20">
                <MenuItem Header="Shopping" HorizontalAlignment="Left" Width="80" Click="shopping_Click"/>
                <MenuItem Header="Cart" x:Name="menuCart" HorizontalAlignment="Left" Width="60" Click="cart_Click"/>
                <MenuItem Header="Login" x:Name="menuLogin" HorizontalAlignment="Left" Width="90" Click="login_Click"/>
                <MenuItem Header="Album" x:Name="menuAlbum" HorizontalAlignment="Left" Width="60" Click="album_Click" IsEnabled="False"/>
            </Menu>
            <StackPanel>
                <Image Name="imgBackground" Width="900" Height="420"></Image>
            </StackPanel>
            <TextBlock x:Name="tbAuthor" HorizontalAlignment="Center" ></TextBlock>
        </StackPanel>
    </Grid>
</Window>
